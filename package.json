{
  "name": "x-flexbox",
  "version": "1.0.0",
  "description": "Web Components which provide Flexbox features.",
  "homepage": "https://github.com/1000ch/x-flexbox",
  "bugs": {
    "url": "https://github.com/1000ch/x-flexbox/issues"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/1000ch/x-flexbox.git"
  },
  "license": "MIT",
  "author": {
    "name": "1000ch",
    "email": "shogosensui@gmail.com",
    "web": "https://github.com/1000ch"
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "scripts": {
    "build": "tsc && terser --output dist/index.js dist/index.js && terser --output dist/flex-container.js dist/flex-container.js && terser --output dist/flex-item.js dist/flex-item.js",
    "prepublish": "npm run build",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^25.1.0",
    "jest": "^25.1.0",
    "terser": "^4.6.2",
    "ts-jest": "^25.2.0",
    "typescript": "^3.8.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/test/*.test.ts"
    ]
  }
}
